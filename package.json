{
  "name": "simp-ui",
  "version": "0.2.8",
  "description": "A simple React UI library with minimal dependencies.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -r ./dist && npm run format && tsc",
    "build-watch": "rm -r ./dist && npm run format && tsc --watch",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanjlatimer/simp-ui.git"
  },
  "author": "jordanjlatimer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordanjlatimer/simp-ui/issues"
  },
  "homepage": "https://github.com/jordanjlatimer/simp-ui#readme",
  "devDependencies": {
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "prettier": "^2.1.2",
    "sass": "^1.28.0",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "sideEffects": [
    "*.sass"
  ],
  "prettier": {
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5"
  }
}
